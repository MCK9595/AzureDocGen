<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">AzureDocGen</a>
        <div class="navbar-nav ms-auto">
            <AuthorizeView>
                <Authorized Context="authContext">
                    <span class="navbar-text me-3">
                        こんにちは、@authContext.User.Identity?.Name さん
                    </span>
                    <a href="/Account/Logout" class="btn btn-outline-light btn-sm">ログアウト</a>
                </Authorized>
                <NotAuthorized>
                    <a href="/Account/Login" class="btn btn-outline-light btn-sm me-2">ログイン</a>
                    <a href="/Account/Register" class="btn btn-light btn-sm">新規登録</a>
                </NotAuthorized>
            </AuthorizeView>
        </div>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/Project">
                        <span class="bi bi-folder-fill" aria-hidden="true"></span> プロジェクト
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/Template">
                        <span class="bi bi-file-earmark-template-fill" aria-hidden="true"></span> テンプレート
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>

        <AdminCheck>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/Admin">
                    <span class="bi bi-gear-fill" aria-hidden="true"></span> 管理者
                </NavLink>
            </div>
        </AdminCheck>

    </nav>
</div>
